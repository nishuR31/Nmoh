generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "linux-musl", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("USER_DB")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  username       String    @unique
  name           String?
  email          String   @unique
  password       String
  contact        String?
  twoFAEnable    Boolean? @default(false)
  twoFASecret    String? 
  verified       Boolean  @default(false)
  otp            String?
  otpExpiresAt   DateTime?
  verifiedOtp    Boolean  @default(false)
  lastLogin      DateTime?
  loginAttempt   Int      @default(0)
  loginAttemptAt DateTime?
  blocked        Boolean  @default(false)
  refreshToken   String?
  photo          String?
  devicePasswordHash String? // For demonstration, stores device password hash for passkey login
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model PendingRegistration {
  email             String   @id
  username          String
  otp               String
  otpExpiry         DateTime
  superadminOtp     String?
  superadminOtpExpiry DateTime?
  awaitingApproval  Boolean? @default(false)
  name              String?
  createdAt         DateTime @default(now())
}
