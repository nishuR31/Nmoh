generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "linux-musl", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATA_DB")
}

model Repo {
  id             String   @id @default(uuid())
  name           String
  description    String? @default("")
  backendLinks   String[] @default([])
  emails         String[] @default([])
  githubLinks    String[] @default([])
  hostedLinks    String[] @default([])
  servicesUsed   String[] @default([])
  userIds        String[] @default([]) // Array of user IDs for collaborations
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
