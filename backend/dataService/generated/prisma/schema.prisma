generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("EVENT_DB")
}

model Event {
  id          String    @id @default(uuid())
  name        String
  description String?
  url         String?
  deleteUrl   String?
  likes       Int       @default(0)
  visible     Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  eventDate   String?
  eventTime   String?
  performer   String?
}
